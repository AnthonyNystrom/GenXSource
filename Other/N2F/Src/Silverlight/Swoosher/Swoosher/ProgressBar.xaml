			<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
				<GradientStop Color="#FF187EE4" Offset="0"/>
				<GradientStop Color="#FF306CA7" Offset="1"/>
				<GradientStop Color="#FF6AACEE" Offset="0.232"/>
			</LinearGradientBrush>
		</Rectangle.Fill>
	</Rectangle>

