                    <Label HorizontalAlignment="Left" Name="label17" Width="120" Foreground="White" FontSize="18" Grid.Row="2">Blue</Label>
                </Grid>
            </TabItem>
            <TabItem Visibility="Hidden">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Slider Margin="160,10,250,0" Template="{StaticResource TemplateSlider}" Name="sliderOffsetRedHigh" Minimum="-1" Maximum="1"
                            SmallChange="0.01" LargeChange="0.1" Tag="0" Background="{StaticResource SliderRed}" />
                    <Label HorizontalAlignment="Left" Name="label18" Width="120" Foreground="White" FontSize="18">Red</Label>
                    <Slider Margin="160,10,250,0" Template="{StaticResource TemplateSlider}" Name="sliderOffsetGreenHigh" Minimum="-1" Maximum="1"
                            SmallChange="0.01" LargeChange="0.1" Grid.Row="1" Tag="0" Background="{StaticResource SliderGreen}" />
                    <Label HorizontalAlignment="Left" Name="label19" Width="120" Foreground="White" FontSize="18" Grid.Row="1">Green</Label>
                    <Slider Margin="160,10,250,0" Template="{StaticResource TemplateSlider}" Name="sliderOffsetBlueHigh" Minimum="-1" Maximum="1"
                            SmallChange="0.01" LargeChange="0.1" Grid.Row="2" Tag="0" Background="{StaticResource SliderBlue}" />
                    <Label HorizontalAlignment="Left" Name="label20" Width="120" Foreground="White" FontSize="18" Grid.Row="2">Blue</Label>
                </Grid>
            </TabItem>
            <TabItem Visibility="Hidden">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Slider Margin="160,10,50,0" Template="{StaticResource TemplateSlider}" Name="sliderGainTempLow" Minimum="-1" Maximum="1"
                            SmallChange="0.01" LargeChange="0.1" Tag="0" Background="{StaticResource SliderTemperature}" />
