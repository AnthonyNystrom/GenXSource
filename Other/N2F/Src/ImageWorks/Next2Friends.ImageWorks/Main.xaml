                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Slider Margin="160,15,250,15" Template="{StaticResource TemplateSlider}" Name="sliderSatEnhMid" Minimum="0"  Maximum="1"
