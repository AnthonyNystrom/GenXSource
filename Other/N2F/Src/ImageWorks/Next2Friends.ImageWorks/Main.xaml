                    <Label HorizontalAlignment="Left" Margin="10" Name="label11" Width="120" Foreground="White" FontSize="18" Grid.Row="1">Contrast</Label>
                </Grid>
            </TabItem>
            <TabItem Visibility="Hidden">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Slider Margin="160,10,250,0" Template="{StaticResource TemplateSlider}" Name="sliderOffsetRedLow" Minimum="-1" Maximum="1"
