                    <Label HorizontalAlignment="Left" Name="label14" Width="120" Foreground="White" FontSize="18" Grid.Row="2">Blue</Label>
                </Grid>
            </TabItem>
            <TabItem Visibility="Hidden">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Slider Margin="160,10,250,0" Template="{StaticResource TemplateSlider}" Name="sliderOffsetRedMid" Minimum="-1" Maximum="1"
                            SmallChange="0.01" LargeChange="0.1" Tag="0" Background="{StaticResource SliderRed}" />
                    <Label HorizontalAlignment="Left" Name="label15" Width="120" Foreground="White" FontSize="18">Red</Label>
                    <Slider Margin="160,10,250,0" Template="{StaticResource TemplateSlider}" Name="sliderOffsetGreenMid" Minimum="-1" Maximum="1"
