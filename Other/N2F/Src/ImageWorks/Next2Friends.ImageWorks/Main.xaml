                    <Label HorizontalAlignment="Left" Margin="10" Name="label9" Width="120" Foreground="White" FontSize="18" Grid.Row="1">Contrast</Label>
                </Grid>
            </TabItem>
            <TabItem Visibility="Hidden">
                <Grid>
                    <Grid.RowDefinitions>
