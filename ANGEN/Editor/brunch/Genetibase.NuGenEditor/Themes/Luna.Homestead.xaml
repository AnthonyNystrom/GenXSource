<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:ctrls="clr-namespace:Genetibase.Windows.Controls"
	xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Luna"
	>

	<!-- 
	    *************************
		*** SplitButton Style ***
	    *************************
	-->

	<Style x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type ctrls:NuGenEditor}, ResourceId={x:Type Thumb}}" TargetType="Thumb">
		<Setter Property="Height" Value="8" />
		<Setter Property="OverridesDefaultStyle" Value="True"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Thumb">
					<theme:ScrollChrome
						x:Name="Chrome"
                        RenderMouseOver="{TemplateBinding IsMouseOver}" 
                        SnapsToDevicePixels="True"
                        ThemeColor="Homestead"
						/>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>